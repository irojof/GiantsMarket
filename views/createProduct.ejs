<!DOCTYPE html>
<html lang="es">

<!--HEAD-->
<%- include('partials/head')  %>

    <body>
        <!--HEADER-->
        <%- include('partials/header')  %>
            <ul class="errors"></ul>
            <form action="/create" method="POST" id="form" class="cont-form" enctype="multipart/form-data">
                <div class="p-form">
                    <h1>Crear Producto</h1>
                    <div class="igroup">
                        <input type="text" name="name" id="name" minlength="3" maxlength="20" placeholder="Escribe el nombre del producto"><span class="ibar"></span>
                        <label for="name">Nombre del producto</label>
                    </div>

                    <div class="igroup">
                        <input type="Text" name="price" id="price" placeholder="Escribe el precio del producto"><span class="ibar"></span>
                        <label for="price">Precio</label>
                    </div>

                    <div class="igroup">
                        <input type="file" name="image" id="image"><span class="ibar"></span>
                        <label for="image">Imagen</label>
                    </div>

                    <div class="igroup">
                        <textarea cols="55" rows="2" name="description" id="description" placeholder="Escribe una breve descripción del producto"></textarea><span class="ibar"></span>
                        <label for="description">Descripción</label>
                    </div>

                    <div class="igroup">
                        <textarea cols="1000" name="description_detail" id="description_detail" placeholder="Escribe una descripción detallada del producto"></textarea><span class="ibar"></span>
                        <label for="description_detail">Descripción detalle</label>
                    </div>

                    <div class="igroup">
                        <input type="number" name="stock" id="stock" placeholder="Escribe la cantidad de productos que quieres vender"><span class="ibar"></span>
                        <label for="stock">Stock</label>
                    </div>

                    <div class="igroup">
                        <label for="category">Categoria</label>
                        <select class="f-select" name="category" id="category">
                            <option value="">Elegí</option>
                            <option value="1">Unicos</option>
                            <option value="2">Variados</option>
                        </select>
                    </div>

                    <!-- HIDDEN-->
                    <div class="igroup" hidden>
                        <input type="Text" name="transferable" id="transferable"><span class="ibar"></span>
                        <label for="transferable">transferable</label>
                    </div>
                    <div class="igroup" hidden>
                        <input type="Text" name="discount" id="discount"><span class="ibar"></span>
                        <label for="discount">discount</label>
                    </div>
                    <div class="igroup" hidden>
                        <input type="Text" name="shipping" id="shipping"><span class="ibar"></span>
                        <label for="shipping">shipping</label>
                    </div>
                    <button type="submit" class="button">Guardar producto</button>
                </div>
            </form>
            <script src="/js/productsAddValidation.js"></script>
            <!--FOOTER-->
            <%- include('partials/footer')  %>
    </body>

</html>